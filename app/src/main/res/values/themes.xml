<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Sillyn" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
    <style name="Theme.Sillyn.SplashScreenTheme" parent="Theme.Sillyn">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item> 
    </style>

    <style name="Theme.Sillyn.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sillyn.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
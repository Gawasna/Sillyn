<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:context=".ui.fragment.IntroFragment">

    <ImageView
        android:id="@+id/ivIntro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Intro Image" /> <!-- Thay @drawable/ic_launcher_foreground bằng icon/ảnh phù hợp -->

    <TextView
        android:id="@+id/tvIntroTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Chào mừng đến với ứng dụng"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvIntroDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Đây là màn hình giới thiệu. Chúng tôi sẽ hướng dẫn bạn các tính năng chính."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</LinearLayout>